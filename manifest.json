{
  "name": "Petrified of Silence",

  "description": "Turns off sound on certain sites if certain other websites are open",

  "browser_action": {
    "default_icon": "icon19g.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "19": "icon19g.png",
    "19": "icon19r.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "version": "1.2",
  "minimum_chrome_version": "37",
  "manifest_version": 2,

  "permissions": ["tabs", "storage"]
}